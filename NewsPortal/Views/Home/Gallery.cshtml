@{
    ViewData["Title"] = "Képgaléria";
}

@model GalleryViewModel

<link href="~/css/gallery.css" rel="stylesheet" type="text/css" />


<div style="text-align:center">
    <!-- Slideshow container -->
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        @for (int i = 0; i < Model.PictureIds.Count; ++i)
        {
            <div class="mySlides">
                <div class="numbertext">@(i + 1) / @Model.PictureIds.Count</div>
                <img src="@Url.Action("LargePicture", new {pictureId = Model.PictureIds[i]})" class="contentImage" />
            </div>
        }

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
</div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
        @for (int i = 0; i < Model.PictureIds.Count; ++i)
        {
            <span class="dot" onclick="currentSlide(@(i+1))"></span>

        }
    </div>

<div>
    <a asp-action="Article" asp-route-articleId="@Model.ArticleId">Vissza a cikkhez</a>
</div>

    <script type="text/javascript" src="~/js/gallery.js"></script>